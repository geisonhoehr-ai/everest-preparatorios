  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+evercast",
      "url": "/evercast?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/evercast?action=upload",
      "accept": {
        "audio/*": [".mp3", ".wav", ".m4a", ".aac", ".ogg"]
      }
    }
  ],
  "share_target": {
    "action": "/evercast?action=share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "audio",
          "accept": ["audio/*"]
        }
      ]
    }
  }
}